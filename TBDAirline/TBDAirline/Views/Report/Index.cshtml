@model TBDAirline.Models.Report

<div class="container border" style="padding:20px">

    <form asp-action="Index">

        <div class="form-group row" style="padding:5px">
            <div class="col-2">
                Please enter flight ID:
            </div>
            <div class="col-5">
                <input type="text" asp-for=FlightID class="form-control" />
            </div>
        </div>

        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                <input type="submit" value="Get Passenger List" class="btn btn-primary" />
            </div>
        </div>

    </form>
</div>

@if (@Model != null && @Model.Passengers != null)
{
    <h3>Flight information:</h3>
    <div class="container border" style="padding:20px">

        <table>
            <thead>
                <tr>
                    <td width="20%">Flight ID</td>
                    <td width="20%">From</td>
                    <td width="20%">To</td>
                    <td width="20%">Departure time</td>
                    <td width="20%">Arrival time</td>

                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td width="20%">@Model.Flight.FlightID</td>
                        <td width="20%">@Model.FromAirport.AirportName</td>
                        <td width="20%">@Model.ToAirport.AirportName</td>
                        <td width="20%">@Model.Flight.DepartureTime</td>
                        <td width="20%">@Model.Flight.ArrivalTime</td>
                    </tr>
            </tbody>
        </table>
    </div>



    <br />
    <h3>List of passenger:</h3>
    <div class="container border" style="padding:20px">

        <table>
            <thead>
                <tr>
                    <td width="30%">Name</td>
                    <td width="30%">Email</td>
                    <td width="30%">Phone number</td>

                </tr>
            </thead>
            <tbody>
                @{
                    foreach (Passenger p in Model.Passengers)
                    {
                        <tr>
                            <td>@p.PassengerName</td>
                            <td>@p.Email</td>
                            <td>@p.PhoneNumber</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
    <br />
    <h5>Total number of passengers: @Model.Passengers.Count</h5>
}
else if(@Model != null && @Model.Error != null){
    <h3>@Model.Error</h3>
}