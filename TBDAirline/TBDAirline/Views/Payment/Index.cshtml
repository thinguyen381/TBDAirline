@model TBDAirline.Models.PaymentView

<h1>Payment information: </h1>


<div class="container border" style="padding:20px">
    @using (Html.BeginForm("Index", "Payment", FormMethod.Post))
    {

        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Total amount:
            </div>
            <div class="col-5">
             $@Model.Payment.TotalAmount
            </div>
        </div>

        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Name on card:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Payment.CardHolder, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Card number:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Payment.CardNumber, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                CVV/ Security code:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Payment.CVV, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Expiration date:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Payment.Expiration, new {@class = "form-control", required = "required"})
            </div>
        </div>

        <div>
            <input type="submit" class="btn btn-primary" value="Confirm" />
        </div>
    }
</div>
