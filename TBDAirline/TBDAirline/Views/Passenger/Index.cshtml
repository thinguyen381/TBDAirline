@model TBDAirline.Models.PassengerView

<h1>Passenger Information: </h1>
<div class="container border" style="padding:20px">
    @using (Html.BeginForm("Index", "Passenger", FormMethod.Post))
    {
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Passenger Name:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Passenger.PassengerName, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Email:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Passenger.Email, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div class="form-group row" style="padding:5px">
            <div class="col-3">
                Phone Number:
            </div>
            <div class="col-5">
                @Html.TextBoxFor(model => model.Passenger.PhoneNumber, new {@class = "form-control", required = "required"})
            </div>
        </div>
        <div>
            <input type="submit" class="btn btn-primary" value="Confirm" />
        </div>
    }
</div>
