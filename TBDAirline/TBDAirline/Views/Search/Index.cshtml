@model TBDAirline.Models.SearchModel


@*Search Function*@
<div class="container border" style="padding:20px">

@using (Html.BeginForm("Index", "Search", FormMethod.Post))
{
    <table>
        <tr>
            <td>From Date:</td>
            <td>
                @Html.EditorFor(Model => Model.FromDate)
            </td>
        </tr>
        <tr>
            <td>To Date:</td>
            <td>
                <!-- @Html.EditorFor(Model => Model.ToDate) -->
                @Html.EditorFor(Model => DateTime.Compare(Model.FromDate, Model.ToDate) > -1)
            </td>
        </tr>
        <tr>
            <td>From City:</td>
            <td>
                @Html.DropDownList("FromCity", new SelectList(Model.Cities))
            </td>
        </tr>
        <tr>
            <td>To City:</td>
            <td>
                @Html.DropDownList("ToCity", new SelectList(Model.Cities))
            </td>
        </tr>


    </table>
    <div>
        <input type="submit" value="Search" />
    </div>
}
</div>
